@model IEnumerable<YourProjectName_ViewModels.SecurityRoleViewModel>
@using YourProjectName_Resources

@{
    ViewBag.Title = @Resources.SecurityRole;
}

@Styles.Render("~/Content/home")

<div class="metso-home">
    <div class="jumbotron">
        <div class="container">
            <div class="page-header">
                <h1>
                    @ViewBag.Title
                </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table id="tbGrid" class="table table-striped table-sm m-0" data-filtering="true" data-paging="true" data-paging-size="5" data-sorting="true" data-paging-count-format="{CP} @Resources.Of {TP}" data-paging-container="#paging-ui-container">
                    <thead class="">
                        <tr>
                            <th width="50px" valuetoexport="-">
                                <a href="@Url.Action("RoleEditForm", "Security", new { ID = 0 })" class="btn btn-info btn-sm btn-round btn-crud" title="@Resources.CreateNew"><i class="fas fa-plus-circle"></i></a>
                            </th>
                            <th>@Resources.Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td valuetoexport="-" style="vertical-align:middle;">
                                    <table style="background-color:transparent;">
                                        <tr style="background-color:transparent;">
                                            <td style="border-top:none;">
                                                <a href="@Url.Action("RoleEditForm", "Security", new { ID = item.idrole })" class="btn btn-warning btn-sm btn-round btn-crud" title="@Resources.Edit"><i class="fas fa-pencil-alt"></i></a>
                                            </td>
                                            <td style="border-top:none;">
                                                <a href="@Url.Action("RoleRemove", "Security", new { ID = item.idrole })" class="btn btn-danger btn-sm btn-round btn-crud" onclick="return confirm('@Resources.DeleteConfirmation?');" title="@Resources.Delete"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                                <td valuetoexport="@item.role_description" style="vertical-align:middle;">
                                    <span>
                                        <a href="@Url.Action("RoleEditForm", "Security", new { ID = item.idrole })" style="color:blue;">@item.role_description</a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br /><br />
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tbGrid').footable();
    });
</script>