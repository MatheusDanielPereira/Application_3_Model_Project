@using YourProjectName_Resources;
@model YourProjectName_ViewModels.LoginViewModel
@{
    ViewBag.Title = @Resources.YourProjectName;
}

@Styles.Render("~/Content/Login")

<div class="metso-login">
    <div class="metso-login-form">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-md-offset-3">
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true)
                        <h3 class="loginTitle">@Resources.YourProjectName</h3>
                        if (ViewBag.ErrorMessage != null)
                        {
                            <div class="bs-callout bs-callout-danger">@ViewBag.ErrorMessage</div>
                        }
                        <div class="input-group">
                            <span class="input-group-addon" id="metsoInputUsername">
                                <i class="fas fa-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)

                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="metsoInputPassword">
                                <i class="fas fa-key"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <button id="btnLogin" name="btnLogin" type="submit" class="btn btn-default">@Resources.Login</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>