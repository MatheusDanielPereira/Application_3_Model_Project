@model IEnumerable<YourProjectName_ViewModels.ParameterViewModel>
@using YourProjectName_Resources

@{
    ViewBag.Title = @Resources.SystemParameters;
}

@Styles.Render("~/Content/home")

<div class="metso-home">
    <div class="jumbotron">
        <div class="container">
            <div class="page-header">
                <h1>
                    @ViewBag.Title
                </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <table id="tbGrid" class="table table-striped table-sm m-0" data-filtering="true" data-paging="true" data-paging-size="5" data-sorting="true" data-paging-count-format="{CP} @Resources.Of {TP}" data-paging-container="#paging-ui-container">
                    <thead>
                        <tr>
                            <th width="50px" valuetoexport="-"></th>
                            <th>@Resources.Name</th>
                            <th>@Resources.Value</th>
                            <th>@Resources.Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="50px" valuetoexport="-" style="vertical-align:middle;">
                                    <table style="background-color:transparent;">
                                        <tr style="background-color:transparent;">
                                            <td style="border-top:none;">
                                                <a href="@Url.Action("EditForm", "Parameter", new { ID = item.idparameter })" class="btn btn-warning btn-sm btn-round btn-crud" title="@Resources.Edit"><i class="fas fa-pencil-alt"></i></a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td valuetoexport="@item.Name" style="vertical-align:middle;">
                                    <span>
                                        <a href="@Url.Action("EditForm", "Parameter", new { ID = item.idparameter })" style="color:blue;">@item.Name</a>
                                    </span>
                                </td>
                                <td style="vertical-align:middle;">@item.Value</td>
                                <td style="vertical-align:middle;">@item.description</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br /><br />
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tbGrid').footable();
    });
</script>
